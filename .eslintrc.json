{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      "tab"
    ],
    "linebreak-style": [
      "error",
      "windows"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "valid-jsdoc": [
      2
    ],
    "no-extra-parens": [
      2
    ],
    "no-magic-numbers": [
      1
    ],
    "camelcase": [
      2
    ],
    "comma-spacing": [
      2
    ],
    "lines-between-class-members": [
      2
    ],
    "no-multiple-empty-lines": [
      2,
      {
        "max": 1
      }
    ],
    "no-trailing-spaces": [
      2
    ],
    "require-jsdoc": 2,
    "arrow-spacing": 2,
    "prefer-template": 2
  }
}